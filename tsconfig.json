{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@config/*": ["config/*"],
      "@data/*": ["data/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "config/**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports"
  ]
}
